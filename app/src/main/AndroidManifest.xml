<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.rongcloud.sealmicandroid">

    <application
        android:name=".SealMicApp"
        android:allowBackup="true"
        android:fitsSystemWindows="true"
        android:icon="@mipmap/ic_seal_mic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_seal_mic_logo"
        android:theme="@style/Theme.Design.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:replace="label"
        tools:targetApi="m">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DebugActivity"
            android:launchMode="singleTop" />

        <meta-data
            android:name="design_width_in_dp"
            android:value="380" />

        <meta-data
            android:name="design_height_in_dp"
            android:value="580" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
        <!-- 适配全面屏底黑边，此值建议在2.1或者更大 -->
        <service android:name=".common.service.RTCNotificationService" />
    </application>

    <!-- 音视频需要网络权限 和 监听网络状态权限 -->
    <!-- 摄像头采集需要 -->
    <!-- 音频采集需要 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission
        android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />

</manifest>